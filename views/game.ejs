<% layout('layouts/boilerplate') %>
<%- include('partials/nav') %> 

<div id="overlay" class="container position-absolute top-100 start-50 translate-middle text-center">
    <div class="row mb-3 mt-3">
        <span class="col rounded-pill" id="color-indicator">
            <h1>#<%= randomColors[pickedColorIndex] %></h1>
        </span>
    </div>

    <% var index = 0; %>
    <% for(var i=0; i<difficulty; i++) { %>
        <div class="row">
            <% for(var x=0; x<3; x++) { %>
                <div class="col">
                    <div class="m-auto rounded-circle color-pad" style="background-color: #<%=randomColors[index]%>;" id="<%=randomColors[index]%>"> </div>
                    <% index++ %>
                </div>
            <% } %>
        </div>
    <% } %> 
    <div class="row" id="popUp">
        <div class="col"><a href="/"><button class="btn btn-outline-secondary btn-sm">Main Menu</button></a></div>
        <div class="col"><h3>CORRECT!</h3></div>
        <div class="col"><a href="/game/<%=difficulty%>"><button class="btn btn-outline-secondary btn-sm">Play Again</button></a></div>
    </div>
</div>

<script>
